defmodule Crate do
  def move_one_crate(from_array, to_array) do
    {moved_crate, changed_from_array} = List.pop_at(from_array, -1)
    {changed_from_array, List.insert_at(to_array, -1, moved_crate)}
  end

  def execute_one_crate_move(crate_stack, instruction) do
    old_from_array = Enum.at(crate_stack, Enum.at(instruction, 1))
    old_to_array = Enum.at(crate_stack, Enum.at(instruction, 2))
    {new_from_array, new_to_array} = Crate.move_one_crate(old_from_array, old_to_array)

    new_incomplete_crate_stack =
      List.replace_at(crate_stack, Enum.at(instruction, 1), new_from_array)

    new_complete_crate_stack =
      List.replace_at(new_incomplete_crate_stack, Enum.at(instruction, 2), new_to_array)
  end

  def move_multi_crate(from_array, to_array, crates_to_move) do
    {changed_from_array, moved_crates} = Enum.split(from_array, -crates_to_move)
    {changed_from_array, Enum.concat(to_array, moved_crates)}
  end

  def execute_multi_crate_move(crate_stack, [how_many, _from, _to] = instruction) do
    old_from_array = Enum.at(crate_stack, Enum.at(instruction, 1))
    old_to_array = Enum.at(crate_stack, Enum.at(instruction, 2))

    {new_from_array, new_to_array} =
      Crate.move_multi_crate(old_from_array, old_to_array, how_many)

    new_incomplete_crate_stack =
      List.replace_at(crate_stack, Enum.at(instruction, 1), new_from_array)

    List.replace_at(new_incomplete_crate_stack, Enum.at(instruction, 2), new_to_array)
  end

  execute_one_instruction

  def execute_one_instruction(crate_stack, [how_many, from, to]) when how_many <= 1 do
    execute_one_crate_move(crate_stack, [how_many, from, to])
  end

  def execute_one_instruction(crate_stack, [how_many, from, to] = instruction) do
    execute_one_crate_move(crate_stack, instruction)
    |> execute_one_instruction([how_many - 1, from, to])
  end

  def execute_all_instructions(
        crate_stack,
        instructions_input,
