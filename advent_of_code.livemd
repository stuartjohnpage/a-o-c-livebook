defmodule RoutineDetector do
  def examine_letters(letter_list) do
    Enum.reduce_while(letter_list, {0, []}, fn letter, {count, acc} ->
      new_list = List.insert_at(acc, -1, letter)

      if Enum.count(acc) > 3 do
        if Enum.count(MapSet.new(acc)) == 4 do
          IO.inspect(count)
          {:halt, {count, acc}}
        else
          {:cont, {count + 1, elem(List.pop_at(new_list, 0), 1)}}
        end
      else
        {:cont, {count + 1, new_list}}
      end
    end)
  end
end

