        total_instructions
      )
      when current_instruction == total_instructions - 1 do
    execute_multi_crate_move(crate_stack, Enum.at(instructions_input, current_instruction))
  end

  def execute_multi_crate_all_instructions(
        crate_stack,
        instructions_input,
        current_instruction,
        total_instructions
      ) do
    execute_multi_crate_move(crate_stack, Enum.at(instructions_input, current_instruction))
    |> execute_multi_crate_all_instructions(
      instructions_input,
      current_instruction + 1,
      total_instructions
    )
  end
end

